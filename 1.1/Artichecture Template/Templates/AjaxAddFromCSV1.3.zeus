	public string GenerateAddFunction(ITable table)
	{
		string script="";
		script+="new "+table.Alias+"Controller().Add(";
		int CountCol=0;
		foreach(IColumn column in table.Columns)
		{
			if(CountCol==0)
			{
			 script+=column.Alias;
			}
			else
			{
			script+=","+column.Alias;
			}
			CountCol++;
		}
		script+=");";
		
		return script;
	}
	
